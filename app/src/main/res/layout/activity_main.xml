<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    tools:context=".activities.base.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="0dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:translationZ="0dp"
            app:cardBackgroundColor="@color/transparent">

            <ImageView
                android:id="@+id/DrawerButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/md_green_800"
                android:layout_gravity="center"
                android:src="@drawable/menu"
                android:padding="4dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home Page"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="@color/md_green_900"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--top banner part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/top_bg"
                android:layout_height="260dp">

                <TextView
                    android:id="@+id/WelcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/md_green_800"
                    android:textSize="24sp"
                    android:text="Hello,"/>

                <TextView
                    android:id="@+id/GreetingsText"
                    android:layout_below="@id/WelcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:typeface="monospace"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/md_green_700"
                    android:textSize="20sp"
                    android:text="Good Evening"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/GreetingsText"
                    android:background="@drawable/a_roundbg"
                    android:elevation="3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:tint="@color/md_green_600"
                        android:src="@drawable/ic_calendar_date"/>
                    <TextView
                        android:id="@+id/DateTimeText"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11th May,2020 | Monday"
                        android:textSize="16sp"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
