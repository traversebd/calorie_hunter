<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"
        android:clickable="true"
        android:elevation="5dp"
        android:translationZ="3dp"
        android:layout_margin="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:ignore="NamespaceTypo"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true">

        <!--   Recycler View Item Row   -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/AnswerDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:tag="Date"
                android:text="21-Apr-2020"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold"
                android:background="@drawable/side_curved_back"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="4dp"
                        android:translationZ="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rectangle_background_filled"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/Icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_exercise" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="6.6"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/result"
                            android:paddingLeft="4dp"
                            android:paddingRight="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/md_blue_700"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=":"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textStyle="bold"
                            android:textColor="@color/md_blue_700"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/CalorieResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/calorie_result_sample"
                            android:paddingLeft="4dp"
                            android:paddingRight="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/md_blue_700"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/activity_level"
                            android:paddingLeft="4dp"
                            android:paddingRight="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/md_blue_700"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=":"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textStyle="bold"
                            android:textColor="@color/md_blue_700"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/ActivityLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/activity_level_sample"
                            android:paddingLeft="4dp"
                            android:paddingRight="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/md_blue_700"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>