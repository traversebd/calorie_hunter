<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"
        app:cardCornerRadius="12dp"
        android:translationZ="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="4dp"
        app:elevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/calorie_result_back">

            <LinearLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/your_result"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_green_900"/>

            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_below="@id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/using_miffin_st_jeor_rule"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_green_900"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_calories_including_exercise"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@color/md_green_900"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/md_green_900"/>

                        <RelativeLayout
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:elevation="4dp"
                            android:translationZ="2dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:backgroundTint="@color/md_green_500"
                            android:background="@drawable/rectangle_background_filled"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/maintenanceCalorie"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/calorie_result_sample"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_white_1000"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="@string/fat_loss"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/md_green_900"/>

                        <RelativeLayout
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:elevation="4dp"
                            android:translationZ="2dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:backgroundTint="@color/md_green_500"
                            android:background="@drawable/rectangle_background_filled"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/fatLossCalorie"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/calorie_result_sample"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_white_1000"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="@string/extreme_fat_loss"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/md_green_900"/>

                        <RelativeLayout
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:elevation="4dp"
                            android:translationZ="2dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:backgroundTint="@color/md_green_500"
                            android:background="@drawable/rectangle_background_filled"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/extremeFatLossCalorie"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/calorie_result_sample"
                                android:gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_white_1000"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/now_what"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_green_900"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/one_dot"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.8"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/short_dummy_description"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/two_dot"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.8"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/short_dummy_description"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/three_dot"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.8"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/short_dummy_description"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/four_dot"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.8"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/short_dummy_description"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/five_dot"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.8"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/short_dummy_description"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_green_900"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>